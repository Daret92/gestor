<h2>Nuevo Usuario</h2>
<%= simple_form_for @user, url:{action:"user_create"} do |f| %>
	<div class="row">
		<div class="col-lg-6 col-md-12">
			<div class="card" style="padding: 15px;">
				<div class="form-group">
					<%=f.text_field :alias, class: "form-control form-control-user", placeholder:"Alias"%>
				</div>
				<div class="form-group">
					<%=f.email_field :email, class: "form-control form-control-user", placeholder:"Correo Electronico"%>
				</div>
				<div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder:"Contraseña" %>
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user",placeholder:"Repite Tu Contraseña" %>
            </div>
          </div>
          		<div class="form-group">
					<%=f.select(:users_id, options_for_select(User.where(super_user:false).collect{|titulo| [titulo.nombre,titulo.id]},f.object.users_id),{include_blank: "Seleccionar un Superior"},{class: 'form-control'})%>
				</div>
			</div>
		</div>
		<div class="col-lg-6 col-md-12">
			<div class="card" style="padding: 15px;">
				<div class="form-group">
					<div class="row">
						<div class="col-md-8">
							<%=f.file_field :avatar, class: "form-control form-control-user", placeholder:"Avatar"%>
						</div>
						<div class="col-md-4">
							<div class="row">
								<div class="col-lg-1 col-sm-1 col-md-1">
									<%=f.check_box :activo%>
								</div>
								<div class="col-lg-9 col-sm-9 col-md-9">
									activo
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<%=f.text_field :nombre, class: "form-control form-control-user", placeholder:"Nombre(s) del Usuario"%>
				</div>
				<div class="form-group">
					<%=f.text_field :apellido, class: "form-control form-control-user", placeholder:"Apellido(s)"%>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="col-md-12">
			<div class="card" style="padding: 15px;">
				<div class="responsive">
					<table class="table">
						<thead>
							<tr>
								<th>
									Elegir Rol
								</th>
								<th></th>
								<th>
								</th>
							</tr>
						</thead>
						<tbody>
							<% @rols.each do |item|%>
							<tr>
								<td><%= item.nombre%></td>
								<td><small><%=item.descripcion%></small></td>
								<td><%= f.radio_button(:rol_id,item.id)%></td>
							</tr>
							<%end%>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="col-lg-12 col-md-12">
			<div class="card" style="padding: 15px;">
				<%= f.submit "Guardar", class: "btn btn-primary" %>
			</div>
		</div>
	</div>
<%end%>