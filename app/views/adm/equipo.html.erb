<div class="row">
  <div class="col">
  </div>
  <div class=" col">
    <%=link_to equipo_nuevo_path, class: "btn btn-primary btn-block" do%>
      <i class="fas fa-plus"></i> Agregar Equipo de Trabajo
    <%end%>
  </div>
</div>
<br/>
<div class="table-responsive">
<table class="table table-bordered dataTable"  width="100%" cellspacing="0">
  <thead>
    <tr>
    	<th># Control</th>
      <th>Equipo</th>
      <th>Activo</th>
      <th>Editar</th>
    </tr>
  </thead>
  <tbody>
  	<%@equipo.each do |item|%>
  		<tr>
  			<td><%= item.id%></td>
	      <td><%= item.nombre%></td>
	      <td class="text-center "><%if item.activo == true %><i class="fas fa-check-square"><%else%><i class="fas fa-square"><%end%></td>
	      <td class="text-center ">
	      	<%= link_to equipo_edit_path(item), class: "btn btn-success btn-circle" do%>
	      		<i class="fas fa-edit"></i>
	      	<%end%>
          <%= link_to equipo_delete_path(item), method: :delete, class: 'btn btn-danger  btn-circle',data: { confirm:'Â¿Estas Seguro de eliminar este Equipo de Trabajo?'}  do %>
	      		<i class="fas fa-trash"></i>
	      	<%end%>
	      </td>
    	</tr>
    <%end%>
  </tbody>
</table>
</div>