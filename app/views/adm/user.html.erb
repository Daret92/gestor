<div class="row">
  <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
  </div>
  <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-12">
    <%=link_to nuevoUsuario_path, class: "btn btn-primary btn-block" do%>
      <i class="fas fa-plus"></i> Agregar Usuario
    <%end%>
  </div>
</div>
<br/>
<div class="table-responsive">
<table class="table table-bordered dataTable"  width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Rol</th>
      <th>Activo</th>
      <th>Editar</th>
    </tr>
  </thead>
  <tbody>
  	<%@users.each do |item|%>
  		<tr>
	      <td><%= item.nombre%> <%= item.apellido%></td>
        <td><%= item.email%></td>
        <td><%= Rol.where(id:item.rol_id).first().nombre%></td>
	      <td class="text-center "><%if item.activo == true %><i class="fas fa-check-square"><%else%><i class="fas fa-square"><%end%></td>
	      <td class="text-center ">
	      	<%= link_to user_edit_path(item), class: "btn btn-success btn-circle" do%>
	      		<i class="fas fa-edit"></i>
	      	<%end%>
          <%= link_to user_delete_path(item), method: :delete, class: 'btn btn-danger  btn-circle',data: { confirm:'Â¿Estas Seguro de eliminar este Usuario?'}  do %>
	      		<i class="fas fa-trash"></i>
	      	<%end%>
	      </td>
    	</tr>
    <%end%>
  </tbody>
</table>
</div>