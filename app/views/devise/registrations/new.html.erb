  <div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-2"></div>
          <div class="col-lg-8">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">!Crear Una Cuenta Nueva!</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.text_field :nombre, class: "form-control form-control-user", placeholder: "Nombre(s)" %>
                  </div>
                  <div class="col-sm-6">
                    <%= f.text_field :apellido, class: "form-control form-control-user", placeholder: "Apellido(s)" %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user",placeholder:"Correo Electronico" %>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder:"ContraseÃ±a" %>
                  </div>
                  <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user",placeholder:"Repite Tu ContraseÃ±a" %>
                  </div>
                </div>
                <%= f.submit "Registrarte",class: "btn btn-primary btn-user btn-block" %>
                <hr>

              <% end %>
              <hr>
              <div class="text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
          <div class="col-lg-2"></div>
        </div>
      </div>
    </div>

  </div>