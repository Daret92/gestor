<div class="card" style="padding: 3%;">
<%= simple_form_for(@proyecto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :titulo %>
    </div>
    <div class="col-md-10">
      <%= f.text_field :titulo, class: "form-control" %>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-2">
    <%= f.label :estado %>
    </div>
    <div class="col-md-10">
      <%= f.select :estado, [['Abierta',1],['Cerrada',2],['Pausado',3]],{}, class: "form-control" %>  
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-4">
          <%= f.label :inicio%>
        </div>
        <div class="col-md-8">
          <%= f.date_field :inicio,class: "form-control"%>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-4">
          <%= f.label :fin%>
        </div>
        <div class="col-md-8">
          <%= f.date_field :fin,class: "form-control"%>
        </div>
      </div>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :descripcion %>
    </div>
    <div class="col-md-10">
      <%= f.text_area :descripcion, class: "form-control" %>
    </div>
  </div>
  <br/>
  <div class="form-actions text-center">
    <%= f.submit class: "btn btn-primary" do %>
      Crear Proyecto
    <%end%>
  </div>
  <%= link_to proyectos_path, class: "btn btn-warning" do%>
    <i class="fa fa-arrow-left"></i> Regresar
  <%end%>
<% end %>
</div>