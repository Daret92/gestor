<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
		<form>
			<div class="row">
				<div class="col-md-6">
					<input type="text" class="form-control" data-provide='datepicker' name="fecha" placeholder="Buscar por fecha" value="<%=@fecha%>" >
				</div>
				<div class="col-md-6">
					<input type="submit" class="btn btn-info" value="Buscar Por dia"></input>
				</div>
				<div class="col-md-12">
					<sub>La consulta trae las asistencias del dia</sub>
				</div>
			</div>
		</form>
	</div>
	<div class="col-md-3">
	</div>
</div>
<table class="responsive nowrap table" id="dttb-gps_saves" data-sort="true" data-page-length='50'>
	<thead>
		<tr>
			<th>Usuario</th>
			<th>Fecha</th>
			<th>Ubicacion</th>
		</tr>
		<tbody>
			<%@asistencias.each do |item|%>
				<tr>
					<td><%= item.user.nombre%></td>
					<td><%= item.created_at.to_formatted_s(:long)%></td>
					<td>
						<%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=14&size=150x100&markers=size:small%7Ccolor:red%7C#{item.latitud},#{item.longitud}&key=AIzaSyBeYLxS155ixggxOBQnwdmCtUVe3h5RkeQ", alt: "Map" %>
					</td>
				</tr>
			<%end%>
		</tbody>
	</thead>
</table>